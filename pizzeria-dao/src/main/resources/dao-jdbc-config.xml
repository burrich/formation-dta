<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	
	<bean id="pizzaDao" class="fr.pizzeria.dao.PizzaDaoJDBCImpl">
		<constructor-arg value="${jdbc.driver}"></constructor-arg>
		<constructor-arg value="${jdbc.url}"></constructor-arg>
		<constructor-arg value="${jdbc.user}"></constructor-arg>
		<constructor-arg value="${jdbc.password}"></constructor-arg>
	</bean>
	
	<context:property-placeholder location="jdbc.properties" />

	<!-- <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="jdbc.properties"></property>
	</bean> -->
</beans>
